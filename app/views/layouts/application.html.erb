<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="http://vjs.zencdn.net/5.19.2/video-js.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>


  <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to "Flixter", root_path, class: 'navbar-brand' %>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto mt-md-0">
          <li class="nav-item">
            <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Dashboard", dashboard_path , class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete,class: 'nav-link' %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if notice.present? %>
    <p class="alert alert-info text-center"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger text-center"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          wilph26@gmail.com
          <br />
          One Pizza Town
          <br />
          Los Angeles, CA
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'http://github.com/wphoong' do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <span class="fa fa-facebook-square fa-2x social-button"></span>
          <span class="fa fa-twitter-square fa-2x social-button"></span>
        </div>
      </div>
    </div>
  </div>

  <script src="http://vjs.zencdn.net/5.19.2/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
</body>
</html>
